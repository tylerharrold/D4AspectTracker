<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="D4AspectTracker.Controls.AspectTemplateControl">
    <VerticalStackLayout>
        <Label 
            Text="{Binding SelectedAspectName}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label Text="Aspect Type"/>
        <Label Text="Aspect Category"/>
        <Label Text="This is the aspect description it will be very long and will require special color formatting"/>
    </VerticalStackLayout>
</ContentView>
